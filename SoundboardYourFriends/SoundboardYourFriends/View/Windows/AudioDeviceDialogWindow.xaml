<Window x:Class="SoundboardYourFriends.View.Windows.AudioDeviceDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SoundboardYourFriends.View.Windows"
        xmlns:converters="clr-namespace:SoundboardYourFriends.Converters"
        mc:Ignorable="d"
        Title="Audio Devices" Height="300" Width="500"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="headerStyleHidden" TargetType="{x:Type GridViewColumnHeader}">
            <Setter Property="Visibility" Value="Collapsed" />
        </Style>
        <converters:LocalPlaybackEnabledConverter x:Key="LocalPlaybackEnabledConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="12"/>
            <RowDefinition Height="26*"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="2"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>

        <!--Row 1-->

        <!--Row 2-->
        <DockPanel Grid.Row="1" Grid.Column="1">
            <Label DockPanel.Dock="Top">
                <TextBlock VerticalAlignment="Top" FontSize="12" Text="Audio Devices"></TextBlock>
            </Label>
            <ListView Name="lstAudioDevices" DockPanel.Dock="Top" Margin="0,0,0,0" SelectionMode="Multiple" ItemsSource="{Binding AudioDevices}">
                <ListView.View>
                    <GridView x:Name="audioDeviceGrid">
                        <GridViewColumn Header="Device" Width="auto" DisplayMemberBinding="{Binding FriendlyName}"/>
                        <GridViewColumn Width="60">
                            <GridViewColumn.HeaderTemplate>
                                <DataTemplate>
                                    <DockPanel HorizontalAlignment="Left">
                                        <Image DockPanel.Dock="Left" VerticalAlignment="Center" Source="/Resources/LocalAudioIndicator.png" Height="10" Width="10" />
                                        <TextBlock DockPanel.Dock="Left" Margin="4,0,0,0" Text="Local"/>
                                    </DockPanel>
                                </DataTemplate>
                            </GridViewColumn.HeaderTemplate>
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox Name="cbLocal" Margin="0" HorizontalAlignment="Stretch" IsChecked="{Binding PlaybackType, Converter={StaticResource LocalPlaybackEnabledConverter}}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Width="60">
                            <GridViewColumn.HeaderTemplate>
                                <DataTemplate>
                                    <DockPanel HorizontalAlignment="Left">
                                        <Image DockPanel.Dock="Left" VerticalAlignment="Center" Source="/Resources/GlobalAudioIndicator.png" Height="10" Width="10" />
                                        <TextBlock DockPanel.Dock="Left" Margin="4,0,0,0" Text="Global"/>
                                    </DockPanel>
                                </DataTemplate>
                            </GridViewColumn.HeaderTemplate>
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox Name="cbGlobal" Margin="0" HorizontalAlignment="Stretch" IsChecked="True" IsEnabled="False"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </DockPanel>

        <!--Row 3-->
        <DockPanel Grid.Row="2" Grid.Column="1">
            <Button Name="btnOK" Margin="0,10,0,6" Width="95" HorizontalAlignment="Right" FontSize="10" PreviewMouseLeftButtonDown="btnOK_PreviewMouseLeftButtonDown">
                OK
            </Button>
        </DockPanel>

    </Grid>
</Window>
